set nocompatible
filetype plugin indent on
syntax on
set autoindent
set expandtab
set softtabstop = 4
set shiftwidth = 4
set shiftround
set backspace = indent,eol,start
set hidden
set laststatus = 2
set display = lastline
set showmode
set showcmd
set incsearch
set hlsearch
set ttyfast
set lazyredraw
set cursorline
set wrapscan
set report = 0
set synmaxcol = 254
set list
set nobackup

